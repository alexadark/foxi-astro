---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Automated <strong>Content Generation</strong>',
		text: `Harness the power of AI to create high-quality, targeted content at scale. Our advanced algorithms analyze your brand voice, industry trends, and target audience to generate engaging blog posts, social media updates, and marketing copy.
		Save time and resources while maintaining consistent, relevant content across all your platforms.`,
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Streamlined <strong>Sales Process</strong>',
		text: 'Optimize your entire sales funnel with intelligent automation. From lead qualification to personalized follow-ups, our AI-driven system manages repetitive tasks, allowing your team to focus on high-value interactions. Experience shorter sales cycles, improved conversion rates, and enhanced customer satisfaction through data-driven insights and automated workflows.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'AI-Driven <strong>Lead Generation</strong>',
		text: 'Supercharge your lead generation efforts with our cutting-edge AI algorithms. We analyze vast amounts of data to identify and engage high-quality leads that are most likely to convert. Our system continuously learns and adapts, refining your targeting strategy for maximum ROI. Say goodbye to cold calling and hello to a pipeline full of warm, qualified leads.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'AI <strong>Image Generation</strong>',
		text: 'Elevate your visual content with our state-of-the-art AI image generation technology. Create unique, on-brand visuals for your marketing campaigns, social media, and websites without the need for expensive photoshoots or graphic designers. Our AI understands your brand guidelines and generates images that perfectly align with your visual identity, saving you time and resources while ensuring consistency across all your visual assets.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
